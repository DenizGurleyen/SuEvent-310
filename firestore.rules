rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow authenticated users to read all clubs
    match /clubs/{clubId} {
      allow read: if request.auth != null;
      
      // Allow users to create clubs if they are authenticated and set themselves as creator
      allow create: if request.auth != null && 
                   request.resource.data.createdBy == request.auth.uid;
      
      // Allow users to update or delete only clubs they created
      allow update, delete: if request.auth != null && 
                           resource.data.createdBy == request.auth.uid;
    }
    
    // Allow users to read, create, update, delete only their own savedClubs
    match /savedClubs/{savedClubId} {
      allow read: if request.auth != null && 
                  resource.data.userId == request.auth.uid;
      
      allow create: if request.auth != null && 
                   request.resource.data.userId == request.auth.uid;
      
      allow update, delete: if request.auth != null && 
                           resource.data.userId == request.auth.uid;
    }
  }
} 